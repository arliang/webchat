	<div>Page author <a href="http://weibo.com/alllifetoyou2" target="_blank" rel="weibo">Nosier</a></div>
	<br/>					
</div>
<script>

	var __vchat_config = {
		uid:"",//使用vchat的登录用户
		topic:"chat.js对话讨论",//主题
		des:"欢迎使用"//描述
	};

	;;(function(){
		var c = document.createElement('script'); c.type = 'text/javascript'; c.async = true;
		c.src = 'https://www.vchat.co/js/chat.min.js';
		c.onload = function(){//加载成功自动打开 chat
			__vchat.openAndClose();
		};
		var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(c, s);
	})();

</script>
		
	</body>
</html>